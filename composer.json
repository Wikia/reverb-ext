{
    "require": {
        "guzzlehttp/psr7": "^1.4"
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "38.0.0",
        "mediawiki/mediawiki-phan-config": "^0.11.1",
        "mediawiki/minus-x": "^1.1",
        "php-mock/php-mock-mockery": "^1.3",
        "phpunit/phpunit": "^9",
        "seld/jsonlint": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Reverb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpcs -p -s",
            "minus-x check .",
            "phpunit",
            "npm test",
            "jsonlint ./i18n/*.json"
        ],
        "fix": [
            "minus-x fix .",
            "phpcbf"
        ],
        "phpcs": "phpcs",
        "phan": "vendor/bin/phan -d . --long-progress-bar",
        "phpunit": "phpunit"
    }
}
