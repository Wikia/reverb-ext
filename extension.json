{
	"name": "Reverb",
	"version": "0.0.1",
	"author": [
		"Hydra Wiki Platform Team"
	],
	"license-name": "GPL-2.0-or-later",
	"descriptionmsg": "reverb_description",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.31.0"
	},
	"SpecialPages": {
		"Notifications": "SpecialNotifications"
	},
	"MessagesDirs": {
		"HydraCore": [
			"i18n"
		]
	},
	"AutoloadClasses": {
	},
	"ResourceModules": {
		"ext.reverb.notifications.styles": {
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/css/reverb.notifications.css"
			],
			"position": "bottom"
		},
		"ext.reverb.notifications.scripts": {
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/js/reverb.notifications.js"
			],
			"position": "bottom"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Reverb"
	},
	"APIModules": {
		"notifications": "\\Reverb\\Api\\ApiNotifications"
	},
	"Hooks": {
		"UserGroupsChanged": "Reverb\\Hooks::onUserGroupsChanged",
		"PageContentSaveComplete": "Reverb\\Hooks::onPageContentSaveComplete",
		"LocalUserCreated": "Reverb\\Hooks::onLocalUserCreated",
		"ArticleRollbackComplete": "Reverb\\Hooks::onArticleRollbackComplete",
		"LinksUpdateAfterInsert": "Reverb\\Hooks::onLinksUpdateAfterInsert"
	},
	"config": {
		"ReverbNotifications": {
			"value": {
				"user-welcome": {
					"category": "user-interest",
				},
				"user-interest-talk-page-edit": {
					"category": "user-interest"
				},
				"article-edit-revert": {
					"category": "articles"
				},
				"user-interest-page-linked": {
					"category": "articles"
				},
				"user-groups-expiration-change": {
					"category": "user-rights",
				},
				"user-groups-changed": {
					"category": "user-rights",
				},
				"article-edit-thanks": {
					"category": "articles",
				}
			},
			"merge_strategy": "array_plus_2d"
		}
	},
	"manifest_version": 1
}
