{
	"name": "Reverb",
	"version": "0.0.1",
	"author": ["Hydra Wiki Platform Team"],
	"license-name": "GPL-2.0-or-later",
	"descriptionmsg": "reverb_description",
	"type": "other",
	"requires": {
		"extensions": {
			"Twiggy": ">= 0.0.1"
		},
		"MediaWiki": ">= 1.31.0"
	},
	"AutoloadNamespaces": {
		"Reverb\\": "src"
	},
	"SpecialPages": {
		"Notifications": "Reverb\\Special\\SpecialNotifications"
	},
	"ExtensionMessagesFiles": {
		"SpecialNotifications": "i18n/Reverb.i18n.alias.php"
	},
	"MessagesDirs": {
		"HydraCore": ["i18n"],
		"FandomDesktop": ["i18n"]
	},
	"callback": "Reverb\\ReverbHookHandler::registerExtension",
	"ServiceWiringFiles": ["ServiceWiring.php"],
	"ResourceModules": {
		"ext.reverb.notifications.styles": {
			"targets": ["desktop", "mobile"],
			"styles": ["resources/css/reverb.notifications.css"],
			"position": "bottom"
		},
		"ext.reverb.notifications.scripts": {
			"dependencies": ["mediawiki.api"],
			"targets": ["desktop", "mobile"],
			"scripts": ["resources/js/reverb.moment.js", "resources/js/reverb.notifications.js"],
			"position": "bottom",
			"messages": [
				"special-button-all",
				"special-button-read",
				"special-button-unread",
				"special-button-mark-all-read",
				"notifications",
				"view-all",
				"no-read",
				"no-unread",
				"view-additional-unread"
			]
		},
		"ext.reverb.notifications.scripts.notificationPage": {
			"targets": ["desktop", "mobile"],
			"scripts": ["resources/js/reverb.notifications_page.js", "resources/js/reverb.pagination.js"],
			"position": "bottom"
		},
		"ext.reverb.notifications.styles.notificationPage": {
			"targets": ["desktop", "mobile"],
			"styles": ["resources/css/reverb.pagination.css"],
			"position": "bottom"
		},
		"ext.reverb.specialNotifications.fandomdesktop.styles": {
			"targets": ["desktop"],
			"styles": ["resources/css/reverb.specialNotifications.fandomdesktop.css"],
			"position": "bottom"
		},
		"ext.reverb.preferences": {
			"targets": ["desktop", "mobile"],
			"scripts": ["resources/js/reverb.preferences.js"],
			"position": "bottom"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Reverb"
	},
	"APIModules": {
		"notifications": "\\Reverb\\Api\\ApiNotifications"
	},
	"DefaultUserOptions": {
		"reverb-email-frequency": 1
	},
	"Hooks": {
		"AbortEmailNotification": "Reverb\\ReverbHookHandler::onAbortEmailNotification",
		"AbortTalkPageEmailNotification": "Reverb\\ReverbHookHandler::onAbortTalkPageEmailNotification",
		"BeforeInitialize": "Reverb\\ReverbHookHandler::onBeforeInitialize",
		"BeforePageDisplay": "Reverb\\ReverbHookHandler::onBeforePageDisplay",
		"EmailUserComplete": "Reverb\\ReverbHookHandler::onEmailUserComplete",
		"FlaggedRevsRevisionReviewFormAfterDoSubmit": "Reverb\\ReverbHookHandler::onFlaggedRevsRevisionReviewFormAfterDoSubmit",
		"GetNewMessagesAlert": "Reverb\\ReverbHookHandler::onGetNewMessagesAlert",
		"GetPreferences": "Reverb\\ReverbHookHandler::onGetPreferences",
		"LinksUpdateAfterInsert": "Reverb\\ReverbHookHandler::onLinksUpdateAfterInsert",
		"PageSaveComplete": "Reverb\\ReverbHookHandler::onPageSaveComplete",
		"SpecialPageBeforeExecute": "Reverb\\ReverbHookHandler::onSpecialPageBeforeExecute",
		"UserGroupsChanged": "Reverb\\ReverbHookHandler::onUserGroupsChanged",
		"PageHeaderActionButtonShouldDisplay": "Reverb\\ReverbHookHandler::onPageHeaderActionButtonShouldDisplay",
		"BeforePrepareActionButtons": "Reverb\\ReverbHookHandler::onBeforePrepareActionButtons"
	},
	"config": {
		"ReverbApiEndPoint": {
			"value": "http://127.0.0.1:8101/v1"
		},
		"ReverbApiKey": {
			"value": ""
		},
		"ReverbNotifications": {
			"value": {
				"article-edit-page-linked": {
					"importance": 1
				},
				"article-edit-watch": {
					"importance": 8
				},
				"article-edit-revert": {
					"importance": 8
				},
				"article-edit-thanks": {
					"importance": 0
				},
				"user-account-groups-expiration-change": {
					"importance": 9
				},
				"user-account-groups-changed": {
					"importance": 9
				},
				"user-interest-email-user": {
					"importance": 0,
					"matrix": false
				},
				"user-interest-welcome": {
					"importance": 0
				},
				"user-interest-talk-page-edit": {
					"importance": 9
				},
				"user-interest-achievement-earned": {
					"importance": 0
				}
			},
			"merge_strategy": "array_plus_2d"
		},
		"ReverbEnableWatchlistHandling": {
			"value": true
		},
		"ReverbIcons": {
			"value": {
				"category": {
					"user": "fa-user",
					"article": "fa-file"
				},
				"subcategory": {
					"user-account": "fa-user-cog",
					"user-interest": "fa-user",
					"article-edit": "fa-edit"
				},
				"notification": {
					"user-interest-welcome": "fa-user-circle",
					"user-interest-talk-page-edit": "fa-users",
					"article-edit-page-linked": "fa-users",
					"article-edit-revert": "fa-history",
					"article-edit-thanks": "fa-thumbs-up",
					"user-account-groups-expiration-change": "fa-users",
					"user-account-groups-changed": "fa-users"
				}
			},
			"merge_strategy": "array_plus_2d"
		},
		"ReverbNamespace": {
			"value": "hydra"
		},
		"ReverbNotifiers": {
			"value": {
				"web": ["ReverbNotifiers", "notifyWithNotification"],
				"email": ["ReverbNotifiers", "notifyWithEmail"]
			}
		}
	},
	"ConfigRegistry": {
		"reverb": "GlobalVarConfig::newInstance"
	},
	"load_composer_autoloader": true,
	"manifest_version": 2
}
