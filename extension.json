{
	"name": "Reverb",
	"version": "0.0.1",
	"author": [
		"Hydra Wiki Platform Team"
	],
	"license-name": "GPL-2.0-or-later",
	"descriptionmsg": "reverb_description",
	"type": "other",
	"requires": {
		"extensions": {
			"Twiggy": ">= 0.0.1"
		},
		"MediaWiki": ">= 1.31.0"
	},
	"SpecialPages": {
		"Notifications": "Reverb\\Special\\SpecialNotifications"
	},
	"MessagesDirs": {
		"HydraCore": [
			"i18n"
		]
	},
	"callback": "Reverb\\Hooks::registerExtension",
	"AutoloadClasses": {
		"Reverb\\Api\\ApiNotifications": "includes/api/ApiNotifications.php",
		"Reverb\\Hooks": "includes/Hooks.php",
		"Reverb\\Identifier\\Identifier": "includes/identifier/Identifier.php",
		"Reverb\\Identifier\\InvalidIdentifierException": "includes/identifier/InvalidIdentifierException.php",
		"Reverb\\Identifier\\SiteIdentifier": "includes/identifier/SiteIdentifier.php",
		"Reverb\\Identifier\\UserIdentifier": "includes/identifier/UserIdentifier.php",
		"Reverb\\Notification\\Notification": "includes/notification/Notification.php",
		"Reverb\\Notification\\NotificationBroadcast": "includes/notification/NotificationBroadcast.php",
		"Reverb\\Notification\\NotificationBundle": "includes/notification/NotificationBundle.php",
		"Reverb\\Notification\\NotificationEmail": "includes/notification/NotificationEmail.php",
		"Reverb\\Special\\SpecialNotifications": "includes/special/SpecialNotifications.php",
		"Reverb\\Traits\\UserContextTrait": "includes/traits/UserContextTrait.php"
	},
	"ServiceWiringFiles": [
		"includes/ServiceWiring.php"
	],
	"ResourceModules": {
		"ext.reverb.notifications.styles": {
			"dependencies": [
				"ext.hydraCore.font-awesome.styles"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/css/reverb.notifications.css"
			],
			"position": "bottom"
		},
		"ext.reverb.notifications.scripts": {
			"dependencies": [
				"mediawiki.api"
			],
			"targets": [
				"desktop",
				"mobile"
			],
			"scripts": [
				"resources/js/reverb.moment.js",
				"resources/js/reverb.notifications.js"
			],
			"position": "bottom",
			"messages": [
				"special-button-all",
				"special-button-read",
				"special-button-unread",
				"notifications",
				"view-all",
				"no-unread",
				"view-additional-unread"
			]
		},
		"ext.reverb.notifications.scripts.notificationPage": {
			"targets": [
				"desktop",
				"mobile"
			],
			"scripts": [
				"resources/js/reverb.pagination.js"
			],
			"position": "bottom"
		},
		"ext.reverb.notifications.styles.notificationPage": {
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": [
				"resources/css/reverb.pagination.css"
			],
			"position": "bottom"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Reverb"
	},
	"APIModules": {
		"notifications": "\\Reverb\\Api\\ApiNotifications"
	},
	"DefaultUserOptions": {
		"reverb-email-frequency": 1
	},
	"Hooks": {
		"ArticleRollbackComplete": "Reverb\\Hooks::onArticleRollbackComplete",
		"BeforePageDisplay": "Reverb\\Hooks::onBeforePageDisplay",
		"GetNewMessagesAlert": "Reverb\\Hooks::onGetNewMessagesAlert",
		"GetPreferences": "Reverb\\Hooks::onGetPreferences",
		"LinksUpdateAfterInsert": "Reverb\\Hooks::onLinksUpdateAfterInsert",
		"LocalUserCreated": "Reverb\\Hooks::onLocalUserCreated",
		"PageContentSaveComplete": "Reverb\\Hooks::onPageContentSaveComplete",
		"SpecialPageBeforeExecute": "Reverb\\Hooks::onSpecialPageBeforeExecute",
		"UserGroupsChanged": "Reverb\\Hooks::onUserGroupsChanged"
	},
	"config": {
		"ReverbApiEndPoint": {
			"value": "http://127.0.0.1:8101/v1"
		},
		"ReverbNotifications": {
			"value": {
				"user-interest-welcome": {
					"importance": 0
				},
				"user-interest-talk-page-edit": {
					"importance": 9
				},
				"user-interest-page-linked": {
					"importance": 1
				},
				"article-edit-revert": {
					"importance": 8
				},
				"article-edit-thanks": {
					"importance": 0
				},
				"user-account-groups-expiration-change": {
					"importance": 9
				},
				"user-account-groups-changed": {
					"importance": 9
				}
			},
			"merge_strategy": "array_plus_2d"
		},
		"ReverbIcons": {
			"value": {
				"category": {
					"user": "fa-bullhorn",
					"article": "fa-bullhorn"
				},
				"subcategory": {
					"user-account": "",
					"user-interest": "",
					"article-edit": ""
				},
				"notification": {
					"user-interest-welcome": "",
					"user-interest-talk-page-edit": "",
					"user-interest-page-linked": "",
					"article-edit-revert": "",
					"article-edit-thanks": "",
					"user-account-groups-expiration-change": "",
					"user-account-groups-changed": ""
				}
			},
			"merge_strategy": "array_plus_2d"
		},
		"ReverbNamespace": {
			"value": "hydra"
		},
		"ReverbNotifiers": {
			"value": {
				"web": [
					"ReverbNotifiers",
					"notifyWithNotification"
				],
				"email": [
					"ReverbNotifiers",
					"notifyWithEmail"
				]
			}
		}
	},
	"ConfigRegistry": {
		"reverb": "GlobalVarConfig::newInstance"
	},
	"load_composer_autoloader": true,
	"manifest_version": 2
}
